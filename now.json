{
  "version": 2,
  "builds": [{ "src": "server.js", "use": "@now/node-server" }],
  "routes": [
    { "src": "/(.*)",
    "dest": "server.js",
    "headers": {
      "Access-Control-Allow-Origin": "*",
      "Access-Control-Allow-Methods": "OPTIONS",
      "Access-Control-Allow-Headers": "Origin, X-Requested-With, Content-Type, Accept, Authorization"
    },
    "methods": ["OPTIONS"]
  },
    {
      "src": "/product-listing",
      "dest": "/server.js",
      "methods": ["GET", "OPTIONS"],
      "headers": {
        "Content-Type": "application/json",
        "Access-Control-Allow-Headers": "*",
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "src": "/shopping-cart",
      "dest": "/server.js",
      "methods": ["GET", "OPTIONS"],
      "headers": {
        "Content-Type": "application/json",
        "Access-Control-Allow-Headers": "*",
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "src": "/product-view",
      "dest": "/server.js",
      "methods": ["GET", "OPTIONS"],
      "headers": {
        "Content-Type": "application/json",
        "Access-Control-Allow-Headers": "*",
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "src": "/shopping-cart",
      "dest": "/server.js",
      "methods": ["POST", "OPTIONS"],
      "headers": {
        "Content-Type": "application/json",
        "Access-Control-Allow-Headers": "*",
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "src": "/shopping-cart",
      "dest": "/server.js",
      "methods": ["PATCH", "OPTIONS"],
      "headers": {
        "Content-Type": "application/json",
        "Access-Control-Allow-Headers": "*",
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "src": "/shopping-cart",
      "dest": "/server.js",
      "methods": ["DELETE", "OPTIONS"],
      "headers": {
        "Content-Type": "application/json",
        "Access-Control-Allow-Headers": "*",
        "Access-Control-Allow-Origin": "*"
      }
    }
  ]
}
